datasource db {
  provider = "postgresql"  // Or "sqlite" if using SQLite-based deployment
  url      = env("DATABASE_URL")  // We'll add this in the next step
}

generator client {
  provider = "prisma-client-js"
}

// Define your models here
model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}
